# Routes
# This file defines all Mupi routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                            controllers.Mupi.index
GET     /assets/javascript/routes   controllers.Mupi.jsRoutes

GET     /login                      controllers.Mupi.login
POST    /login                      controllers.Mupi.doLogin

GET     /logout                     com.feth.play.module.pa.controllers.Authenticate.logout
GET     /authenticate/:provider     com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)

GET     /signup                     controllers.Mupi.signup
POST    /signup                     controllers.Mupi.doSignup

GET     /accounts/unverified        controllers.Signup.unverified
GET     /authenticate/:provider/denied     controllers.Signup.oAuthDenied(provider: String)

GET     /accounts/verify/:token     controllers.Signup.verify(token: String)
GET     /accounts/exists            controllers.Signup.exists

GET     /accounts/password/reset/:token     controllers.Signup.resetPassword(token: String)
POST    /accounts/password/reset            controllers.Signup.doResetPassword

GET    /accounts/password/change    controllers.Account.changePassword
POST   /accounts/password/change    controllers.Account.doChangePassword

GET     /accounts/verify            controllers.Account.verifyEmail

GET     /accounts/add               controllers.Account.link

GET     /accounts/link              controllers.Account.askLink
POST    /accounts/link              controllers.Account.doLink

GET     /accounts/merge             controllers.Account.askMerge
POST    /accounts/merge             controllers.Account.doMerge

GET     /login/password/forgot     controllers.Signup.forgotPassword(email: String ?= "")
POST    /login/password/forgot     controllers.Signup.doForgotPassword

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Mupi Pages
GET    /profile           controllers.Profile.profile
POST   /profile           controllers.Profile.doProfile
POST   /profile/:op/:id   controllers.Profile.changeLocation(op: Integer, id: Long)

GET		 /home						  controllers.Mupi.home

GET		 /wizard						controllers.Mupi.wizard

GET		 /config						controllers.Mupi.config

GET		 /interests					  controllers.Mupi.interests
POST   /checkInterest/:id   controllers.Interest.checkInterest(id: Long)
POST   /uncheckInterest/:id controllers.Interest.uncheckInterest(id: Long)
POST   /ignoreInterest/:id  controllers.Interest.ignoreInterest(id: Long)


GET    /interestManager   controllers.Interest.interestManager
#POST  /interestManager   controllers.Interest.doUpdateInterests

POST   /addInterest       controllers.Interest.doAddInterest

GET /about            controllers.Mupi.about
GET /contact          controllers.Mupi.contact
GET /help             controllers.Mupi.help
GET /media            controllers.Mupi.media
GET /privacyPolicies  controllers.Mupi.privacyPolicies
GET /statistics       controllers.Mupi.statistics
GET /terms            controllers.Mupi.terms
GET /signup           controllers.Mupi.signup
GET /feed             controllers.Mupi.feed
GET /configuration    controllers.Mupi.configuration
GET /inbox            controllers.Mupi.inbox
GET /notifications    controllers.Mupi.notifications
